generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id @default(uuid()) @db.Uuid
  createdAt        DateTime           @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime           @updatedAt @db.Timestamptz(6)
  email            String             @unique
  passwordHash     String?
  passwordSalt     String?
  passwordVersion  Int?
  username         String?
  sessions         Session[]
  artifacts        Artifact[]
  ArtifactRevision ArtifactRevision[]
  File             File[]
}

model Session {
  id              String   @id @default(uuid()) @db.Uuid
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String   @db.Uuid
  token           String   @unique @db.VarChar(255)
  expiresAt       DateTime @db.Timestamptz(6)
  extendableUntil DateTime @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)
}

model Artifact {
  id                 String     @id @default(uuid()) @db.Uuid
  title              String
  isPinned           Boolean    @default(false)
  artifactTemplate   Artifact?  @relation("artifactTemplate", fields: [artifactTemplateId], references: [id], onDelete: SetNull)
  artifactTemplateId String?    @db.Uuid
  templatedArtifacts Artifact[] @relation("artifactTemplate")
  rootTemplateId     String?
  isTemplate         Boolean    @default(false)
  user               User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             String     @db.Uuid
  text               String
  json               Json
  createdAt          DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt          DateTime   @updatedAt @db.Timestamptz(6)

  artfactFiles                    ArtifactFile[]
  artifactReferences              ArtifactReference[]      @relation("artifactReferenceSourceArtifact")
  incomingArtifactReferences      ArtifactReference[]      @relation("artifactReferenceTargetArtifact")
  artifactBlockReferences         ArtifactBlockReference[] @relation("artifactBlockReferenceSourceArtifact")
  incomingArtifactBlockReferences ArtifactBlockReference[] @relation("artifactBlockReferenceTargetArtifact")
  artifactRevisions               ArtifactRevision[]
}

model ArtifactReference {
  id String @id @default(uuid()) @db.Uuid

  artifactId      String   @db.Uuid
  artifact        Artifact @relation("artifactReferenceSourceArtifact", fields: [artifactId], references: [id], onDelete: Cascade)
  artifactBlockId String   @db.Uuid

  // Used for actual reference to artifact, so we can join
  referenceTargetArtifactId String?   @db.Uuid
  targetArtifact            Artifact? @relation("artifactReferenceTargetArtifact", fields: [referenceTargetArtifactId], references: [id], onDelete: SetNull)

  // Target artifact may not actually exist
  targetArtifactId String @db.Uuid

  artifactReferenceDisplayText ArtifactReferenceDisplayText @relation(fields: [targetArtifactId], references: [artifactId])

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}

model ArtifactReferenceDisplayText {
  artifactId  String @db.Uuid
  displayText String

  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @db.Timestamptz(6)
  lastUsedAt DateTime @default(now()) @db.Timestamptz(6)

  // These are artifact references that depend on this displayText entry
  dependentArtifactReferences ArtifactReference[]

  @@id([artifactId])
}

model ArtifactBlockReference {
  id String @id @default(uuid()) @db.Uuid

  artifactId      String   @db.Uuid
  artifact        Artifact @relation("artifactBlockReferenceSourceArtifact", fields: [artifactId], references: [id], onDelete: Cascade)
  artifactBlockId String   @db.Uuid

  // Used for actual reference to artifact, so we can join
  referenceTargetArtifactId String?   @db.Uuid
  targetArtifact            Artifact? @relation("artifactBlockReferenceTargetArtifact", fields: [referenceTargetArtifactId], references: [id], onDelete: SetNull)

  // Target artifact, or target block may not actually exist
  targetArtifactId      String @db.Uuid
  targetArtifactBlockId String @db.Uuid

  artifactBlockReferenceDisplayText ArtifactBlockReferenceDisplayText @relation(fields: [targetArtifactId, targetArtifactBlockId], references: [artifactId, artifactBlockId])

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}

model ArtifactBlockReferenceDisplayText {
  // We purposefully do not refer to artifactId or artifactBlockId since they can be deleted
  artifactId      String @db.Uuid
  artifactBlockId String @db.Uuid
  displayText     String

  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @db.Timestamptz(6)
  lastUsedAt DateTime @default(now()) @db.Timestamptz(6)

  // These are artifact references that depend on this displayText entry
  dependentArtifactBlockReferences ArtifactBlockReference[]

  @@id([artifactId, artifactBlockId])
}

