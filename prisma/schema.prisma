// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(uuid()) @db.Uuid
  createdAt       DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime   @updatedAt @db.Timestamptz(6)
  email           String     @unique
  passwordHash    String?
  passwordSalt    String?
  passwordVersion Int?
  username        String?
  sessions        Session[]
  artifacts       Artifact[]
  threads         Thread[]
}

model Session {
  id              String   @id @default(uuid()) @db.Uuid
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @db.Uuid
  token           String   @unique @db.VarChar(255)
  expiresAt       DateTime @db.Timestamptz(6)
  extendableUntil DateTime @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)
}

model Artifact {
  id                 String         @id @default(uuid()) @db.Uuid
  title              String
  isPinned           Boolean        @default(false)
  artifactTemplate   Artifact?      @relation("artifactTemplate", fields: [artifactTemplateId], references: [id])
  artifactTemplateId String?        @db.Uuid
  rootTemplateId     String?
  isTemplate         Boolean        @default(false)
  user               User           @relation(fields: [userId], references: [id])
  userId             String         @db.Uuid
  text               String
  json               Json
  createdAt          DateTime       @default(now()) @db.Timestamptz(6)
  updatedAt          DateTime       @updatedAt @db.Timestamptz(6)
  artfactFiles       ArtifactFile[]
  templatedArtifacts Artifact[]     @relation("artifactTemplate")
}

model ArtifactFile {
  id         String   @id @default(uuid()) @db.Uuid
  artifactId String   @db.Uuid
  artifact   Artifact @relation(fields: [artifactId], references: [id])
  fileId     String   @db.Uuid
  file       File     @relation(fields: [fileId], references: [id])
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @db.Timestamptz(6)
}

model File {
  id            String         @id @default(uuid()) @db.Uuid
  label         String
  mimetype      String
  filename      String
  storageKey    String
  createdAt     DateTime       @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime       @updatedAt @db.Timestamptz(6)
  artifactFiles ArtifactFile[]
}

model Thread {
  id             String    @id @default(uuid()) @db.Uuid
  title          String
  user           User      @relation(fields: [userId], references: [id])
  userId         String    @db.Uuid
  messages       Message[]
  createdAt      DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime  @updatedAt @db.Timestamptz(6)
}

model Message {
  id        String   @id @default(uuid()) @db.Uuid
  json      Json
  threadId  String   @db.Uuid
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  createdAt DateTime @unique @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}
