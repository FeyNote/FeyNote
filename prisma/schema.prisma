// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(uuid()) @db.Uuid
  createdAt       DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime   @updatedAt @db.Timestamptz(6)
  email           String     @unique
  passwordHash    String?
  passwordSalt    String?
  passwordVersion Int?
  username        String?
  sessions        Session[]
  artifacts       Artifact[]
}

model Session {
  id              String   @id @default(uuid()) @db.Uuid
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @db.Uuid
  token           String   @unique @db.VarChar(255)
  expiresAt       DateTime @db.Timestamptz(6)
  extendableUntil DateTime @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)
}

model Artifact {
  id                 String          @id @default(uuid()) @db.Uuid
  title              String
  isPinned           Boolean         @default(false)
  artifactTemplate   Artifact?       @relation("artifactTemplate", fields: [artifactTemplateId], references: [id])
  artifactTemplateId String?         @db.Uuid
  isTemplate         Boolean         @default(false)
  user               User            @relation(fields: [userId], references: [id])
  userId             String          @db.Uuid
  text               String
  json               Json
  createdAt          DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt          DateTime        @updatedAt @db.Timestamptz(6)
  artifactImages     ArtifactImage[]
  templatedArtifacts Artifact[]      @relation("artifactTemplate")
}

model ArtifactImage {
  id         String   @id @default(uuid()) @db.Uuid
  artifactId String   @db.Uuid
  artifact   Artifact @relation(fields: [artifactId], references: [id])
  imageId    String   @db.Uuid
  image      Image    @relation(fields: [imageId], references: [id])
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @db.Timestamptz(6)
}

model Image {
  id             String          @id @default(uuid()) @db.Uuid
  title          String
  storageKey     String
  createdAt      DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime        @updatedAt @db.Timestamptz(6)
  artifactImages ArtifactImage[]
}
