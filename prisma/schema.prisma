// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid()) @db.Uuid
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @db.Timestamptz(6)
  name             String
  email            String   @unique
  passwordHash     String?
  passwordSalt     String?
  passwordVersion  Int?
  username         String?
  preferences      Json?
  treeYBin         Bytes?   @db.ByteA
  stripeCustomerId String?  @unique @db.VarChar(255)

  sessions                 Session[]
  artifacts                Artifact[]
  artifactRevisions        ArtifactRevision[]
  files                    File[]
  threads                  Thread[]
  artifactShares           ArtifactShare[]
  stripePayments           StripePayment[]
  subscriptions            Subscription[]
  artifactCollectionShares ArtifactCollectionShare[]
}

model Session {
  id              String   @id @default(uuid()) @db.Uuid
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String   @db.Uuid
  token           String   @unique @db.VarChar(255)
  expiresAt       DateTime @db.Timestamptz(6)
  extendableUntil DateTime @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)
}

model Artifact {
  id              String              @id @default(uuid()) @db.Uuid
  title           String
  type            ArtifactType        @default(tiptap)
  theme           ArtifactTheme       @default(default)
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String              @db.Uuid
  linkAccessLevel ArtifactAccessLevel @default(noaccess)
  text            String
  json            Json
  yBin            Bytes               @db.ByteA
  createdAt       DateTime            @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime            @updatedAt @db.Timestamptz(6)

  artifactCollectionId String?             @db.Uuid
  artifactCollection   ArtifactCollection? @relation(fields: [artifactCollectionId], references: [id], onDelete: Cascade)

  artifactReferences         ArtifactReference[]  @relation("artifactReferenceSourceArtifact")
  incomingArtifactReferences ArtifactReference[]  @relation("artifactReferenceTargetArtifact")
  artifactShares             ArtifactShare[]
  artifactShareTokens        ArtifactShareToken[]
  files                      File[]
}

model ArtifactReference {
  id String @id @default(uuid()) @db.Uuid

  artifactId      String   @db.Uuid
  artifact        Artifact @relation("artifactReferenceSourceArtifact", fields: [artifactId], references: [id], onDelete: Cascade)
  artifactBlockId String

  // Used for actual reference to artifact, so we can join
  referenceTargetArtifactId String?   @db.Uuid
  targetArtifact            Artifact? @relation("artifactReferenceTargetArtifact", fields: [referenceTargetArtifactId], references: [id], onDelete: SetNull)

  // Target artifact may not actually exist
  targetArtifactId      String  @db.Uuid
  targetArtifactBlockId String?
  targetArtifactDate    String?

  referenceText String

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}

model ArtifactRevision {
  artifactId String @db.Uuid
  revisionId Int
  userId     String @db.Uuid
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  artifactJson      Json
  artifactFilesJson Json

  createdAt         DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime  @updatedAt @db.Timestamptz(6)
  artifactDeletedAt DateTime? @db.Timestamptz(6)

  @@id([artifactId, revisionId])
}

model ArtifactShare {
  id          String              @id @default(uuid()) @db.Uuid
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String              @db.Uuid
  artifact    Artifact            @relation(fields: [artifactId], references: [id], onDelete: Cascade)
  artifactId  String              @db.Uuid
  accessLevel ArtifactAccessLevel
  createdAt   DateTime            @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime            @updatedAt @db.Timestamptz(6)

  @@unique([artifactId, userId])
}

model ArtifactShareToken {
  id                String              @id @default(uuid()) @db.Uuid
  shareToken        String
  allowAddToAccount Boolean
  artifact          Artifact            @relation(fields: [artifactId], references: [id], onDelete: Cascade)
  artifactId        String              @db.Uuid
  accessLevel       ArtifactAccessLevel
  createdAt         DateTime            @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime            @updatedAt @db.Timestamptz(6)
  expiresAt         DateTime?           @db.Timestamptz(6)
}

model ArtifactCollection {
  id                       String                         @id @default(uuid()) @db.Uuid
  title                    String
  treeYBin                 Bytes                          @db.ByteA
  linkAccessLevel          ArtifactCollectionAccessLevel?
  createdAt                DateTime                       @default(now()) @db.Timestamptz(6)
  updatedAt                DateTime                       @updatedAt @db.Timestamptz(6)
  artifacts                Artifact[]
  artifactCollectionShares ArtifactCollectionShare[]
}

model ArtifactCollectionShare {
  id                   String                        @id @default(uuid()) @db.Uuid
  user                 User                          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               String                        @db.Uuid
  artifactCollection   ArtifactCollection            @relation(fields: [artifactCollectionId], references: [id], onDelete: Cascade)
  artifactCollectionId String                        @db.Uuid
  computedAccessLevels Json
  accessLevel          ArtifactCollectionAccessLevel
  createdAt            DateTime                      @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime                      @updatedAt @db.Timestamptz(6)

  @@unique([artifactCollectionId, userId])
}

enum ArtifactAccessLevel {
  noaccess
  coowner
  readwrite
  readonly
}

enum ArtifactCollectionAccessLevel {
  coowner
  readwrite
  readadd
  readonly
}

enum ArtifactType {
  tiptap
  calendar
  tldraw
}

enum ArtifactTheme {
  default
  classic
}

model File {
  id         String      @id @default(uuid()) @db.Uuid
  userId     String      @db.Uuid
  user       User        @relation(fields: [userId], references: [id])
  artifactId String?     @db.Uuid
  artifact   Artifact?   @relation(fields: [artifactId], references: [id])
  mimetype   String
  name       String
  storageKey String
  purpose    FilePurpose
  metadata   Json
  createdAt  DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime    @updatedAt @db.Timestamptz(6)
}

enum FilePurpose {
  artifact
}

model Thread {
  id        String    @id @default(uuid()) @db.Uuid
  title     String?
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.Uuid
  messages  Message[]
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @updatedAt @db.Timestamptz(6)
}

model Message {
  id        String   @id @default(uuid()) @db.Uuid
  json      Json
  threadId  String   @db.Uuid
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  createdAt DateTime @unique @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}

model StripePayment {
  id                   String        @id @default(uuid()) @db.Uuid
  userId               String?       @db.Uuid
  user                 User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  amountPaid           Int
  customerId           String        @db.VarChar(255)
  customerEmail        String?       @db.VarChar(255)
  paymentIntentId      String        @unique @db.VarChar(255)
  stripeSubscriptionId String        @unique @db.VarChar(255)
  subscriptionId       String?       @db.Uuid
  subscription         Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  eventObjectJson      Json
  createdAt            DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime      @updatedAt @db.Timestamptz(6)
}

model Subscription {
  id                   String          @id @default(uuid()) @db.Uuid
  userId               String          @db.Uuid
  user                 User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name                 String          @db.VarChar(255)
  stripeSubscriptionId String?         @unique @db.VarChar(255)
  expiresAt            DateTime?       @db.Timestamptz(6)
  cancelledAt          DateTime?       @db.Timestamptz(6)
  createdAt            DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime        @updatedAt @db.Timestamptz(6)
  stripePayments       StripePayment[]

  @@unique([userId, name])
}
