{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@feynote/api-services": ["libs/api-services/src/index.ts"],
      "@feynote/config": ["libs/config/src/index.ts"],
      "@feynote/global-types": ["libs/global-types/src/index.ts"],
      "@feynote/prisma/client": ["libs/prisma/client/src/index.ts"],
      "@feynote/prisma/seed": ["libs/prisma/seed/src/index.ts"],
      "@feynote/prisma/types": ["libs/prisma/types/src/index.ts"],
      "@feynote/queue": ["libs/queue/src/index.ts"],
      "@feynote/search": ["libs/search/src/index.ts"],
      "@feynote/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@feynote/trpc": ["libs/trpc/src/index.ts"],
      "@feynote/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
