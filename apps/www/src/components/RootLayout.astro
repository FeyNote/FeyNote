---
import GlobalStyles from './GlobalStyles.astro';
import GoToAppButton from '../components/GoToAppButton.astro';

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="https://static.feynote.com/assets/favicon-20240925.ico" />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="921628de-7259-4592-ae46-667d8d1f8b46"></script>
    <GlobalStyles />
    <style>
      body {
        margin: 0;
        color: white;
        min-height: 100vh;

        font-family: sans-serif;
      }

      a {
        color: inherit;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: left;
        height: 40px;
        padding-left: 16px;
        padding-right: 16px;
        padding-top: 5px;
      }

      .nav .title {
        font-size: 1.2rem;
        margin-right: 30px;
        text-decoration: none;
      }

      .nav .nav-item {
        font-size: 1rem;
        margin-right: 12px;
        text-decoration: none;
      }

      .go-to-app {
        margin-left: auto;
      }

      .content {
        max-width: min(700px, 90%);
        margin-top: 60px;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 100px;
      }

      .fantasy-bg {
        background-position: center center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
        background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.8)), url("https://static.feynote.com/art/czepeku-medusaswake-1120x1645-20240924.jpg");
      }

      @media (min-width: 1121px) {
        .fantasy-bg {
          background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.8)), url("https://static.feynote.com/art/czepeku-medusaswake-2240x3290-20240924.jpg");
        }
      }

      @media (min-width: 2241px) {
        .fantasy-bg {
          background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.8)), url("https://static.feynote.com/art/czepeku-medusaswake-4480x6580-20240924.jpg");
        }
      }
    </style>
  </head>
  <body class="fantasy-bg">
    <div class="nav">
      <a class="title" href="/">FeyNote</a>

      <a class="nav-item" href="https://discord.gg/Tz8trXrd4C">Discord</a>
      <a class="nav-item" href="/pricing">Pricing</a>
      <a class="nav-item" href="/features">Features</a>
      <a class="nav-item" href="https://docs.feynote.com">Docs</a>
    </div>
    <div class="content">
      <slot />
    </div>
  </body>
</html>
