---
import RootLayout from '../../components/RootLayout.astro'
import GoToAppButton from '../../components/GoToAppButton.astro'
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) =>
  b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---
<style>
  .page-content {
    max-width: min(1500px, 90%);
    margin-left: auto;
    margin-right: auto;
  }

  .post {
    list-style: none;
    margin-bottom: 40px;
  }

  .post a {
    text-decoration: none;
    display: grid;
    grid-template-columns: 100px auto;
    gap: 20px;
    align-items: center;
  }

  .post img {
    width: 100px;
  }

  .post h2 {
    font-size: 1.4rem;
    margin-bottom: 0;
  }

  .post time {
    font-size: 0.8rem;
    margin-bottom: 10px;
  }
</style>
<RootLayout title="Blog - Feynote">
  <div class="page-content">
    <h1>Blog</h1>
    <br />
    <ul>
      {sortedPosts.map(post => (
        <li class="post">
          <a href={`/blog/${post.slug}`}>
            <img src={post.data.featuredImageUrl} />
            <div>
              <h2>{post.data.title}</h2>
              <time>{post.data.publishDate.toLocaleDateString()}</time>
              <p>{post.data.preview}</p>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</RootLayout>
